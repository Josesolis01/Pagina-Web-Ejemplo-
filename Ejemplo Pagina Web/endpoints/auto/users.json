{
    "getAll": {
        "route": "/users",
        "method": "GET",
        "sql": "SELECT * FROM users",
        "auth_required": false,
        "allowed_roles": [
            "*"
        ],
        "description": "Gets all users"
    },
    "getById": {
        "route": "/users/$userId",
        "method": "GET",
        "sql": "SELECT * FROM users WHERE userId = $userId",
        "auth_required": false,
        "allowed_roles": [
            "*"
        ],
        "description": "Gets an entry from 'users' by its primary key"
    },
    "create": {
        "route": "/users",
        "method": "POST",
        "sql": "INSERT INTO users(fullName, username, password) VALUES ($fullName, $username, $password)",
        "auth_required": true,
        "allowed_roles": [
            "*"
        ],
        "description": "Creates a new entry in 'users'",
        "request_body_params": [
            "fullName",
            "username",
            "password"
        ]
    },
    "update": {
        "route": "/users/$userId",
        "method": "PUT",
        "sql": "UPDATE users SET fullName = $fullName, username = $username, password = $password WHERE userId = $userId",
        "auth_required": true,
        "allowed_roles": [
            "*"
        ],
        "description": "Updates an existing entry in 'users' by its primary key",
        "request_body_params": [
            "fullName",
            "username",
            "password"
        ]
    },
    "delete": {
        "route": "/users/$userId",
        "method": "DELETE",
        "sql": "DELETE FROM users WHERE userId = $userId",
        "auth_required": true,
        "allowed_roles": [
            "*"
        ],
        "description": "Deletes an existing entry in 'users' by its primary key"
    }
}